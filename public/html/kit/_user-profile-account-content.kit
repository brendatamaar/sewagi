<div class="row mb-5">
    <div class="col-md-8">
    	<h3 class="py-4 mb-5">Security & Log in</h3>
        <div class="form-group mb-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <label class="text-muted">Change password</label>
                <a href="#" class="btn btn-link">Edit</a>
            </div>
        </div>

        <hr class="my-5">
        <div class="form-group mb-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <label class="text-muted">OLD PASSWORD</label>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <div class="input-group input-password-group">
                        <div class="input-group-prepend">
                            <button class="btn btn-transparent" type="button">
                                <img src="../img/dashboard/twoColor/lock.svg" alt="">
                            </button>
                        </div>
                        <input type="password" class="form-control form-control-dashboard form-password bg-white is-invalid" placeholder="Old password">
                        <div class="input-group-append">
                            <button class="btn btn-transparent btn-show-pass" type="button">
                                <i class="far fa-eye-slash"></i>
                            </button>
                        </div>
                    </div>
                    
                    <div class="invalid-feedback d-flex">
                        Oops! You have inputted the wrong password.
                        <a class="ml-auto" data-dismiss="modal" data-toggle="modal" data-target="#modalForgotPassword" href="#">Forgot password</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group mb-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <label class="text-muted">NEW PASSWORD</label>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <div class="input-group input-password-group">
                        <div class="input-group-prepend">
                            <button class="btn btn-transparent" type="button">
                                <img src="../img/dashboard/twoColor/lock.svg" alt="">
                            </button>
                        </div>
                        <input type="password" class="form-control form-control-dashboard form-password bg-white" placeholder="New password">
                        <div class="input-group-append">
                            <button class="btn btn-transparent btn-show-pass" type="button">
                                <i class="far fa-eye-slash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group mb-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <label class="text-muted">CONFIRM NEW PASSWORD</label>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <div class="input-group input-password-group">
                        <div class="input-group-prepend">
                            <button class="btn btn-transparent" type="button">
                                <img src="../img/dashboard/twoColor/lock.svg" alt="">
                            </button>
                        </div>
                        <input type="password" class="form-control form-control-dashboard form-password bg-white" placeholder="Confirm new password">
                        <div class="input-group-append">
                            <button class="btn btn-transparent btn-show-pass" type="button">
                                <i class="far fa-eye-slash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <a href="#" class="btn btn-primary disabled">CHANGE PASSWORD</a>
        <hr class="my-5">
    </div>
</div>

<div class="row mb-5">
    <div class="col-md-8">
        <h3 class="py-4 mb-5">Notifications</h3>
        <div class="form-group mb-5 notif-switch-group">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <label class="text-muted">RECEIVE NOTIFICATIONS ON</label>
            </div>
            <div class="row mb-3">
                <div class="offset-md-3 col-md-3">
                    Email
                </div>
                <div class="col-md-6">
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="email-switch" checked>
                        <label class="custom-control-label" for="email-switch"></label>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="offset-md-3 col-md-3">
                    SMS
                </div>
                <div class="col-md-6">
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="sms-switch" checked>
                        <label class="custom-control-label" for="sms-switch"></label>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="offset-md-3 col-md-3">
                    WhatsApp
                </div>
                <div class="col-md-6">
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="WhatsApp-switch" checked>
                        <label class="custom-control-label" for="WhatsApp-switch"></label>
                    </div>
                </div>
            </div>
        </div>
        <hr class="my-5">
        <div class="form-group mb-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <label class="text-muted">SUBSCRIBE ME TO</label>
            </div>
            <div class="row mb-3">
                <div class="offset-md-3 col-md-3">
                    Sewagi Newsletter
                </div>
                <div class="col-md-6">
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="newsletter-switch" checked>
                        <label class="custom-control-label" for="newsletter-switch"></label>
                    </div>
                </div>
            </div>
        </div>
        <hr class="my-5">
    </div>
</div>

